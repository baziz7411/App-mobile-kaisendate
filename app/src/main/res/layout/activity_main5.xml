<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3f63a9"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            android:gravity="center"
            android:text="Please add your child's \ndevices"
            android:textColor="@color/white"
            android:textSize="24dp"


            />

        <TextView
            android:id="@+id/p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"

            android:text="The information from your child's device will\nhelp us to assess their mental health,duration\nof sleep,places visited,usedapplications etc,\nIt also gives you the ability to block or allow installed applications  q\n\nPlease follow the steps:\n    1. Bring your child's mobile phone\n    2. Scan this QR code with your child's\n        device camera\n    3. You willbe redirected to the 4IN\n        shield application download page\n    4. Once the application is installed,\n        click Next"
            android:textColor="@color/white"
            android:textSize="19dp"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"

            >

            <ImageView
                android:id="@+id/child"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:src="@drawable/qrcode"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"

            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/skip"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#FDFDFD"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="SKip "
                android:textColor="#3A61BC"
                android:textSize="18dp"
                android:textStyle="normal"

                android:visibility="visible"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                android:background="#FDFDFD"
                android:drawableEnd="@drawable/fleched"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="next "
                android:textColor="#3A61BC"
                android:textSize="18dp"
                android:textStyle="normal"

                android:visibility="visible"

                />


        </LinearLayout>



    </LinearLayout>


</LinearLayout>