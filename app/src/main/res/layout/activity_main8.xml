<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3f63a9"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">





        <TextView
            android:id="@+id/congradulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="80dp"
            android:text="Congradulation"
            android:gravity="center"

            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/childProfileCompleted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="You have successfully\ncompleted you child\nprofile"
            android:gravity="center"

            android:textColor="@color/white"
            android:textSize="20dp"

            />



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/congadulation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/skip"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#FDFDFD"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Add another child"
                android:textColor="#3A61BC"
                android:textSize="10dp"
                android:textStyle="normal"

                android:visibility="visible"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/continuee"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:background="#FDFDFD"
                android:drawableEnd="@drawable/fleched"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="continue "
                android:textColor="#3A61BC"
                android:textSize="10dp"
                android:textStyle="normal"

                android:visibility="visible"

                />


        </LinearLayout>





    </LinearLayout>


</LinearLayout>