<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3f63a9"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <TextView
            android:id="@+id/inshield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"

            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Welcom to 4IN Shield"
            android:textColor="@color/white"
            android:textSize="20dp"


            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/captureacuille" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/mybtnstyle"
        android:drawableEnd="@drawable/fleched"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Start   "
        android:textColor="#3A61BC"
        android:textSize="18dp"
        android:textStyle="normal"

        android:visibility="visible"

        />



</LinearLayout>






</LinearLayout>