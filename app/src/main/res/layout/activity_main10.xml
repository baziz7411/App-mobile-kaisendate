<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3f63a9"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:src="@drawable/profile"
            android:layout_marginStart="50dp"/>

        <TextView
            android:id="@+id/firtlastename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"

            android:layout_marginTop="20dp"
            android:text="First name last name"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:layout_marginStart="50dp"
            />

        <TextView
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"

            android:fontFamily="sans-serif-medium"
            android:text="AGE"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:visibility="visible"
            tools:visibility="visible" />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="60dp">

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:orientation="vertical"
                            android:layout_marginStart="30dp"
                            android:background="@drawable/mybtnstyle"

                            >

                                <TextView
                                    android:id="@+id/dangerlevel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"

                                    android:fontFamily="sans-serif-medium"
                                    android:text="Danger level"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:gravity="center"

                                    />
                            <TextView
                                android:id="@+id/high"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:fontFamily="sans-serif-medium"
                                android:text="High"
                                android:textColor="#B30904"
                                android:textSize="20dp"
                                android:gravity="center"

                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:orientation="vertical"
                            android:layout_marginStart="30dp"
                            android:background="@drawable/mybtnstyle"
                            >

                            <TextView
                                android:id="@+id/Lastnightsleepduration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="20dp"

                                android:fontFamily="sans-serif-medium"
                                android:text="Last night Sleep\nduration"
                                android:textColor="@color/black"
                                android:textSize="12dp"

                                />
                            <TextView
                                android:id="@+id/heur1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"

                                android:fontFamily="sans-serif-medium"
                                android:text="8h"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                />


                        </LinearLayout>





                </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        >

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:orientation="vertical"
                            android:layout_marginStart="30dp"
                            android:background="@drawable/mybtnstyle"
                            >

                            <TextView
                                android:id="@+id/deviceusage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="20dp"

                                android:fontFamily="sans-serif-medium"
                                android:text="Device usage"
                                android:textColor="@color/black"
                                android:textSize="15dp"

                                />
                            <TextView
                                android:id="@+id/heur2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"

                                android:fontFamily="sans-serif-medium"
                                android:text="4h"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:orientation="vertical"
                            android:layout_marginStart="30dp"
                            android:background="@drawable/mybtnstyle"
                            >

                            <TextView
                                android:id="@+id/phonecallduration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="20dp"

                                android:fontFamily="sans-serif-medium"
                                android:text="Phone call duration"
                                android:textColor="@color/black"
                                android:textSize="12dp"

                                />
                            <TextView
                                android:id="@+id/heur3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:text="4h"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                />










                         </LinearLayout>
                    </LinearLayout>

    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@drawable/mybtnstyle"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        >


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/mybtnstyle"
                        />









                </ScrollView>
    </LinearLayout>







</LinearLayout>