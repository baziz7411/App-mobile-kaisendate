<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3f63a9"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/socialaccount" />



        <TextView
            android:id="@+id/accountInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="70dp"
            android:text="Please entre your child's social\nmedia account information"
            android:gravity="center"

            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="normal"

            />

        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:text="this information will help us to protect your child from\nonline abusive content and cyberharassment"
            android:gravity="center"

            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="normal"

            />

        <EditText
            android:id="@+id/SocialNetworkPlatform"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="40dp"
            android:background="@color/white"
            android:ems="50"
            android:inputType="textPersonName"
            android:text="Social network platform (Drop down)"

            android:paddingStart="20dp"
            android:textSize="13dp"



            />
        <EditText
            android:id="@+id/socialNetworkUserName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:paddingStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:background="@color/white"


            android:ems="50"
            android:inputType="textPersonName"
            android:text="Social Network User Name"
            android:textSize="13dp"

            />


        <EditText
            android:id="@+id/SocialNetworkPageURL"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="40dp"
            android:background="@color/white"
            android:paddingStart="20dp"


            android:ems="50"
            android:inputType="textPersonName"
            android:text="Social network page URL "
            android:textSize="13dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/skip"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="#FDFDFD"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="SKip "
                android:textColor="#3A61BC"
                android:textSize="18dp"
                android:textStyle="normal"

                android:visibility="visible"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:background="#FDFDFD"
                android:drawableEnd="@drawable/fleched"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="next "
                android:textColor="#3A61BC"
                android:textSize="18dp"
                android:textStyle="normal"

                android:visibility="visible"

                />


        </LinearLayout>





    </LinearLayout>


</LinearLayout>