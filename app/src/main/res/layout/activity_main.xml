<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3f63a9"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/inshield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"

            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="4IN Shield"
            android:textColor="@color/white"
            android:textSize="24dp"


            />
        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"

            android:layout_marginTop="70dp"
            android:layout_marginStart="50dp"
            android:fontFamily="sans-serif-medium"

            android:text="Welcome to 4In Shield!\nSign in to continue"
            android:textColor="@color/white"
            android:textSize="24dp"

            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDFDFD"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="70dp"
            android:drawableEnd="@drawable/email"
            android:paddingEnd="20dp"
            android:textAlignment="textStart"
            app:srcCompat="@drawable/email"
            android:text="Sign in with Email "
            android:textColor="#3A61BC"
            android:visibility="visible"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="20dp"
            android:textStyle="normal"

            />




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDFDFD"
            android:textAlignment="textStart"
            android:paddingStart="20dp"
            android:drawableEnd="@drawable/google"
            android:paddingEnd="20dp"

            android:text="Sign in with Gmail"
            android:visibility="visible"
            android:textColor="#3A61BC"
            android:fontFamily="sans-serif-medium"

            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:textStyle="normal"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDFDFD"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="textStart"
            android:paddingStart="20dp"
            android:drawableEnd="@drawable/facebook"
            android:paddingEnd="20dp"

            android:textColor="#3A61BC"

            android:text="Sign in with Facebook"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:visibility="visible"

            android:textStyle="normal"
            />
        <TextView
            android:id="@+id/noAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="No account?  Sign up"
            android:layout_marginStart="50dp"

            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium"


            />

    </LinearLayout>




</LinearLayout>